<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.detail.PokeDetailFragment"
    android:background="@color/darkpurple"
    >

    <TextView
        android:id="@+id/pokemon_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/backgroundpurple"
        tools:text="Bulbizarre"
        android:textAllCaps="true"
        android:textColor="@color/lightpurple"
        android:textStyle="bold"
        android:textSize="40dp"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/pokemon_detail_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Id"
        android:textColor="@color/lightpurple"
        android:textSize="40dp"
        android:textAlignment="textStart"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/pokemon_text_Id"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/pokemon_detail_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Height"
        android:textColor="@color/lightpurple"
        android:textSize="40dp"
        android:textAlignment="textStart"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/pokemon_text_Height"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/pokemon_detail_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Weight"
        android:textColor="@color/lightpurple"

        android:textSize="40dp"
        android:textAlignment="textStart"
        app:layout_constraintVertical_bias="0.25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/pokemon_text_Weight"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/pokemon_text_Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id"
        android:textColor="@color/purple_200"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/pokemon_detail_name"
        tools:text="Id" />

    <TextView
        android:id="@+id/pokemon_text_Height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/purple_200"
        android:textSize="40dp"
        android:textStyle="bold"
        android:text="Height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/pokemon_detail_id"
        app:layout_constraintVertical_bias="0.2"
        tools:text="Height" />

    <TextView
        android:id="@+id/pokemon_text_Weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/purple_200"
        android:textSize="40dp"
        android:textStyle="bold"
        android:text="Weight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/pokemon_detail_height"
        app:layout_constraintVertical_bias="0.3"
        tools:text="Weight" />




</androidx.constraintlayout.widget.ConstraintLayout>